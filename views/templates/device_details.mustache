<h3>Device {{device.name}} </h3>
    <h4 id="device_id">ID: {{device.id}}</h4>
    {{!--<form role="form">--}}
        
    	<div class="form-group">
    		<label for="update_name">
    			Device name
    		</label>
    		<input type='text' class="form-control" id="update_name" value='{{device.name}}' />
    	</div>
    	
    	<div class="form-group">
    		<label for="update_room">
    			Room
    		</label>
    		<input type='text' class="form-control" id="update_room" value='{{device.type}}'/>
    	</div>
    	
    	<div class="form-group">
    		<label for="update_type">
    			Type
    		</label>
    		<input type='text' class="form-control" id="update_type" value='{{device.location}}'/>
    	</div>
    	
    	
    	<button class="btn btn-default" onclick='update_device()'>
    		Save
    	</button>
{{#components}}
<h3>Component {{name}} </h3>
    <h4 id="component_id_{{id}}">ID: {{id}}</h4>
    {{!--<form role="form">--}}
        
    	<div class="form-group">
    		<label for="update_name">
    			Component name
    		</label>
    		<input type='text' class="form-control" id="update_component_name_{{id}}" value='{{name}}' />
    	</div>
    	
    	<div class="form-group">
    		<label for="update_room">
    			Action/Event Type
    		</label>
    		<input type='text' class="form-control" id="update_component_type_{{id}}" value='{{type}}'/>
    	</div>
    	
    	<div class="form-group">
    		<label for="update_type">
    			Action/Event
    		</label>
    		<input type='text' class="form-control" id="update_action_event_type_{{id}}" value='{{ae_type}}'/>
    	</div>
    	
    	<div class="form-group">
    		<label for="update_type">
    			Data
    		</label>
    		<input type='text' class="form-control" id="update_data_{{id}}" value='{{data}}'/>
    	</div>
    	
    	
    	<button class="btn btn-default" onclick='update_component('{{id}}')'>
    		Save
    	</button>
{{/components}}
    {{!--</form>--}}